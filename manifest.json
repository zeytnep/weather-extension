{
    "manifest_version": 3,
    "name": "Weather Extension",
    "version": "1.0",
    "description": "Get current weather information",
    "icons": {
      "48": "images/weather.png"
    },
    "action": {
      "default_icon": "images/weather.png",
      "default_popup": "popup.html",
      "default_title": "Click to check weather"
    },
    "host_permissions": ["http://api.openweathermap.org/*"],
    "background": {
      "service_worker": "background.js"
    }
  }
  